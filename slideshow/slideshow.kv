#:kivy 2.0.0

#:import Factory kivy.factory.Factory
#:import Window kivy.core.window.Window

<Picture>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
    canvas.after:
        PopMatrix

<Menu>:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Orientation'
        ToggleButton:
            text: 'Landscape'
            group: 'orientation'
            state: 'down' if root.frame_orientation == 'landscape' else 'normal'
        ToggleButton:
            text: 'Portrait'
            group: 'orientation'
            state: 'down' if root.frame_orientation == 'portrait' else 'normal'

    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Image Directory'
        TextInput:
            id: img_dir_text
            text: root.img_dir
        Button:
            text: 'Open'
            on_release: root.show_dirdialog()

    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Time Delay (in seconds)'
        SpinBox:
            id: td_spin

    Label:

    BoxLayout:
        Label:
        Button:
            text: 'Quit Program'
            on_press: root.quit_app()
        Label:

<SpinBox>:
    orientation: 'horizontal'
    # ObjectProperty in py file
    # Needed to access PosIntInput from <Menu>
    output: pii
    PosIntInput:
        id: pii
        text: root.text_value
    Button:
        text: '+'
        on_press: root.plus()
    Button:
        text: '-'
        on_press: root.minus()

<PosIntInput>:

<DirDialog>:
	BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            # This allows choosing a directory
            dirselect: True
            filters: [root.is_dir]

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Choose"
                on_release: root.choice()


<RootWidget>:
    orientation: 'vertical'